<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDevices_ProjectTask.MainPage"
             BackgroundColor="Gray">

    <NavigationPage.TitleView>
        <Label Text="English Test" TextColor="White" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    </NavigationPage.TitleView>

    <ScrollView>
        <StackLayout x:Name="MainLayout" Orientation="Vertical" Margin="20">

            <StackLayout x:Name="RadioButtonLayout" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                
                <RadioButton x:Name="RB_Infinitive" Text="Infinitive" HorizontalOptions="FillAndExpand" CheckedChanged="Enable_InfitiveBase"/>
                <RadioButton x:Name="RB_PastTense" Text="Past tense" HorizontalOptions="FillAndExpand" CheckedChanged="Enable_PastTenseBase"/>
                <RadioButton x:Name="RB_PastParticiple" Text="Participle" HorizontalOptions="FillAndExpand" CheckedChanged="Enable_PastParticipleBase"/>

            </StackLayout>

            <StackLayout x:Name="Buttons" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Button x:Name="TestButton" Text="Test" Clicked="PerformCheck" HorizontalOptions="FillAndExpand" BackgroundColor="White" IsEnabled="False"/>
                <Button Text="Reset" Clicked="ReloadPage" HorizontalOptions="FillAndExpand" BackgroundColor="White"/>
            </StackLayout>

            <StackLayout x:Name="Verbs" Orientation="Vertical">
                
                
                
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>
